{
  "name": "remind-me",
  "version": "0.0.1-beta",
  "description": "Bot to schedule tasks and reminders",
  "license": "ISC",
  "author": "GuilhermeSAraujo",
  "type": "module",
  "main": "index.js",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "type-check": "tsc --noEmit",
    "build": "npm run type-check && tsup src/server.ts --format esm --clean && npm run copy-assets",
    "copy-assets": "mkdir -p dist/assets && cp -r src/assets/* dist/assets/",
    "start": "node dist/server.js",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "dependencies": {
    "@google/generative-ai": "^0.24.1",
    "@hono/node-server": "^1.13.7",
    "@t3-oss/env-core": "^0.13.10",
    "cron": "^4.4.0",
    "hono": "^4.11.4",
    "mongoose": "^9.1.4",
    "qrcode-terminal": "^0.12.0",
    "zod": "^4.3.5"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/qrcode-terminal": "^0.12.2",
    "tsup": "^8.0.0",
    "tsx": "^4.0.0",
    "typescript": "^5.0.0"
  }
}
